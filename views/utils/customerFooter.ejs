<style>
    .customerFooterWrapper{
        width: 100%;
        height: 98%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: rgba(255, 255, 255, 1);
        padding: 0rem 0.75rem;
    }
    .itemWrapper{
        cursor: pointer;
    }
    .imageWrapper{
        display: grid;
        place-items: center;
    }
    .imageWrapper img{
        width: 1.5rem;
